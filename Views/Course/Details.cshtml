@model IEnumerable<Courses.Models.CourseModel>

@{
    ViewBag.Title = "Course Details";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

@foreach (var item in Model)
{
    <div class="container my-5">
        <div class="card shadow-lg p-4 mb-5 bg-white rounded animate__animated animate__fadeIn">
            <div class="row">
                <!-- Course Image -->
                <div class="col-md-4">
                    <img src="~/Uploads/Courses/@item.Image_Id" alt="Course Image" class="img-fluid rounded mb-4">
                </div>
                <!-- Course Details -->
                <div class="col-md-8">
                    <h2 class="text-primary mb-3">@item.Name</h2>
                    <p class="lead text-muted">Learn the latest web technologies and frameworks to build modern, responsive, and interactive web applications.</p>
                    <hr>

                    <h5 class="text-secondary">Course Overview:</h5>
                    <p>@item.Description</p>

                    <h5 class="text-secondary mt-4">Technologies Covered:</h5>
                    <ul class="list-inline">
                        <li class="list-inline-item badge bg-dark text-white p-2">HTML5</li>
                        <li class="list-inline-item badge bg-dark text-white p-2">CSS3</li>
                        <li class="list-inline-item badge bg-dark text-white p-2">JavaScript</li>
                        <li class="list-inline-item badge bg-dark text-white p-2">React</li>
                        <li class="list-inline-item badge bg-dark text-white p-2">Node.js</li>
                        <li class="list-inline-item badge bg-dark text-white p-2">Express</li>
                        <li class="list-inline-item badge bg-dark text-white p-2">MongoDB</li>
                    </ul>

                    <!-- Course Duration -->
                    <h5 class="text-secondary mt-4">Course Duration:</h5>
                    <p><strong>Duration:</strong> 12 Weeks</p>
                    <p><strong>Schedule:</strong> Weekdays - 6 PM to 8 PM</p>

                    <h5 class="text-secondary mt-4">Level:</h5>
                    <p><strong>Level:</strong> Intermediate to Advanced</p>

                    <!-- Instructor Info -->
                    <h5 class="text-secondary mt-4">Instructor:</h5>
                    <p><strong>John Doe</strong> - Senior Web Developer with over 10 years of experience in building enterprise-level applications.</p>

                    <h5 class="text-secondary mt-4">Reviews:</h5>
                    <div class="d-flex align-items-center">
                        <span class="badge bg-warning text-dark p-2">⭐⭐⭐⭐⭐</span>
                        <p class="ml-2">(4.8/5 based on 120 reviews)</p>
                    </div>

                    <h5 class="text-secondary mt-4">Prerequisites:</h5>
                    <ul>
                        <li>Basic knowledge of HTML, CSS, and JavaScript</li>
                        <li>Familiarity with object-oriented programming concepts</li>
                        <li>Experience with version control tools like Git</li>
                    </ul>

                    <hr>

                    <h5 class="text-secondary mt-4">Units & Materials:</h5>
                    <div class="accordion" id="accordionExample">
                        <!-- Unit 1 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Unit 1: Introduction to Web Development
                                </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <ul>
                                        <li>HTML & CSS Basics</li>
                                        <li>Responsive Design Principles</li>
                                        <li>Project Setup and Git</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- Unit 2 -->
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingTwo">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    Unit 2: JavaScript and DOM Manipulation
                                </button>
                            </h2>
                            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <ul>
                                        <li>JavaScript Basics</li>
                                        <li>DOM Manipulation</li>
                                        <li>Event Handling</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- Additional Units can be added similarly -->
                    </div>

                    <a href="#" class="btn btn-primary mt-4 animate__animated animate__pulse animate__infinite">Enroll Now</a>
                </div>
            </div>
        </div>
    </div>

}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
