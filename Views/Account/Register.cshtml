@model Courses.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<link href="~/css/user-style.css" rel="stylesheet" />
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-lg border-0 rounded-4 my-5">
                    <div class="card-body p-4">
                        <h5 class="card-title text-center mb-4 fw-bold">Create an Account</h5>
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-register" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group mb-3">
                                <label class="form-label" for="Name">Full Name</label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter your full name", required = "required" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label" for="Email">Email Address</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email address", required = "required" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label" for="Password">Password</label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password", required = "required" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group mb-4">
                                <label class="form-label" for="ConfirmPassword">Confirm Password</label>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm your password", required = "required" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>

                            <button type="submit" class="btn btn-gradient btn-lg w-100 mb-3">Register</button>

                            <div class="text-center">
                                <span>Already have an account? </span>
                                <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary btn-lg w-100">Login</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<style>
    body {
        background-color: #f8f9fa; /* لون خلفية مريح */
        font-family: 'Arial', sans-serif; /* نوع خط */
    }

    .card {
        border-radius: 15px; /* زوايا دائرية للبطاقة */
    }

    .form-register .form-control {
        border-radius: 25px; /* زوايا دائرية لحقول الإدخال */
        padding: 15px; /* مسافة داخلية للحقول */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* تأثير ظل خفيف */
        transition: box-shadow 0.3s; /* تأثير انتقال الظل */
        border: 1px solid #ced4da; /* لون الحدود */
    }

        .form-register .form-control:focus {
            box-shadow: 0 0 10px rgba(70, 130, 180, 0.5); /* تأثير ظل عند التركيز */
            border-color: #4682b4; /* تغيير لون الحدود عند التركيز */
            outline: none; /* إزالة التحديد الافتراضي */
        }

    .form-label {
        margin-bottom: 0.5rem; /* مساحة بين التسمية والحقل */
        font-weight: bold; /* جعل الخط غامق */
        color: #495057; /* لون التسمية */
        font-size: 0.9rem; /* حجم الخط للتسمية */
        transition: color 0.3s; /* تأثير انتقال على اللون */
    }

    .form-control::placeholder {
        color: #aab7c4; /* لون النص في الحقول */
        opacity: 1; /* للتأكد من وضوح النص */
    }

    .btn-gradient {
        background: linear-gradient(135deg, #6e8efb, #a777e3);
        color: #fff;
        border: none;
        border-radius: 25px; /* زوايا دائرية للزر */
        transition: background 0.3s, box-shadow 0.3s; /* تأثير انتقال */
    }

        .btn-gradient:hover {
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2); /* تأثير ظل عند التحويم */
            background: linear-gradient(135deg, #8f94fb, #a26bf5); /* تغيير اللون عند التحويم */
        }

    .btn-outline-primary {
        border: 2px solid #007bff; /* لون الحدود لزر تسجيل الدخول */
        border-radius: 25px; /* زوايا دائرية للزر */
        color: #007bff; /* لون النص */
        transition: background 0.3s, color 0.3s; /* تأثير انتقال */
    }

        .btn-outline-primary:hover {
            background-color: #007bff; /* لون خلفية عند التحويم */
            color: #fff; /* تغيير لون النص */
        }

    .text-danger {
        font-size: 0.9rem; /* حجم خط رسائل الأخطاء */
    }
</style>
