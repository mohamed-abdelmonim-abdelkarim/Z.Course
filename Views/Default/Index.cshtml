@model IEnumerable<Courses.Models.CourseModel>
@{
    ViewBag.Title = "Client Dashboard";
}
<!-- Courses Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100">
                            <img class="img-fluid rounded mb-4 mb-lg-0"
                                 src="@(!string.IsNullOrEmpty(item.Image_Id) ? Url.Content("~/Uploads/Courses/" + item.Image_Id) : Url.Content("~/images/p.jpg"))"
                                 alt="@item.Name">

                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Description ?? "No description available"</p>
                            </div>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <span class="text-muted">$59.99</span>
                                <a href="@Url.Action("Info", "Course", new { id = item.ID })" class="btn btn-primary">Enroll Now</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                @*<p>No courses available.</p>*@
            }
        </div>

    </div>
</section>

<!-- Footer-->
<footer class="py-5 bg-dark">
    <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Z.Courses @DateTime.Now.Year</p></div>
</footer>
