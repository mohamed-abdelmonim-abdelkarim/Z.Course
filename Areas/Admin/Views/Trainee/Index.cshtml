@model IEnumerable<Courses.Models.traineeCourseModel>

@{
    ViewBag.Title = "Course Trainees";
}

<h2>Course Trainees</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().trainee.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().trainee.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.registrationdata)
        </th>
        <th></th>
    </tr>

    @if (Model == null || !Model.Any())
    {
        <tr>
            <td colspan="4" class="text-center">Not found trainee in this course</td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.trainee.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trainee.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.registrationdata)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
